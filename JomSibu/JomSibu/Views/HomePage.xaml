                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Hello there!"
                           FontAttributes="Bold"
                           FontSize="24"
                           FontFamily="Archivo"
                           Margin="20,10"
                           Grid.Column="0"/>

                    <Border Grid.Column="1"
                            HeightRequest="45"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            Margin="20,0">
                        <Border.StrokeShape>
                            <Ellipse/>
                        </Border.StrokeShape>

                        <Image Source="profile_pic1.png"/>
                    </Border>
                </Grid>

                <!--Ads Corner Starts-->
                <Border Margin="20,20" 
                    BackgroundColor="White" 
                    Stroke="transparent"
                    HeightRequest="150"
                    HorizontalOptions="Fill"
                    Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="6" />
                    </Border.StrokeShape>

                    <Image Source="shopee_ad2.jpg"
                           Aspect="AspectFill"/>
                </Border>
                <!--Ads Corner Ends-->
                
            </StackLayout>

