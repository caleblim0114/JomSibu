                    <Label Text="See all"
                           FontFamily="Roboto"
                           Grid.Column="1"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Margin="20,0"
                           TextColor="#F7A350"/>
                </Grid>

