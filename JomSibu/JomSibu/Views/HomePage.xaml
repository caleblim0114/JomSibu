                            Stroke="transparent"
                            HeightRequest="100"
                            HorizontalOptions="Fill"
                            StrokeShape="RoundRectangle 10">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1.5*"/>
