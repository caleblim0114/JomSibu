                            <Button Grid.Column="2"
                                    Margin="20,0"
                                    HorizontalOptions="End"
                                    Padding="0"
                                    HeightRequest="33"
                                    WidthRequest="90"
                                    CornerRadius="3"
                                    BackgroundColor="#F7A350"
                                    Text="Redeem Now"
                                    TextColor="White"
                                    FontSize="11"/>
