                            <Image Grid.Column="0"
                                   Source="mcdonald.png"
                                   Aspect="AspectFill"/>

                            <Grid Grid.Column="1" Margin="15,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       Text="10% Off"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       FontFamily="Archivo"
                                       VerticalOptions="End"/>

                                <Label Grid.Column="1"
                                       Grid.Row="1"
                                       Text="Valid until 11 Nov"
                                       TextColor="Grey"
                                       FontSize="12"
                                       FontFamily="Roboto"
                                       VerticalOptions="Start"/>
