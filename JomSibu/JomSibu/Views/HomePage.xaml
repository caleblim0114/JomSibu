                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout  Margin="20,0" Spacing="10">
                        <Border BackgroundColor="White" 
                                Stroke="transparent"
                                HeightRequest="200"
                                WidthRequest="300"
                                HorizontalOptions="Start"
                                StrokeShape="RoundRectangle 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0"
                                       Source="lins_swan_garden.jpg"
                                       Aspect="AspectFill"/>

                                <Label Grid.Row="1" 
                                       Text="Central Sibu"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       FontFamily="Archivo"
                                       Margin="20,20"
                                       VerticalOptions="Center"/>

                                <Button Grid.Row="1"
                                        Margin="20,0"
                                        HorizontalOptions="End"
                                        Padding="0"
                                        HeightRequest="28"
                                        WidthRequest="80"
                                        CornerRadius="4"
                                        BackgroundColor="#F7A350"
                                        Text="See Details"
                                        TextColor="White"
                                        FontSize="11"/>
                            </Grid>
                        </Border>

                        <Border BackgroundColor="White" 
                                Stroke="transparent"
                                HeightRequest="200"
                                WidthRequest="300"
                                HorizontalOptions="Start"
                                StrokeShape="RoundRectangle 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0"
