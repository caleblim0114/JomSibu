                                       Aspect="AspectFill"/>

                                <Label Grid.Row="1" 
                                       Text="Central Sibu"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       FontFamily="Archivo"
                                       Margin="20,20"
                                       VerticalOptions="Center"/>

                                <Button Grid.Row="1"
                                        Margin="20,0"
                                        HorizontalOptions="End"
                                        Padding="0"
                                        HeightRequest="28"
                                        WidthRequest="80"
                                        CornerRadius="4"
                                        BackgroundColor="#F7A350"
                                        Text="See Details"
                                        TextColor="White"
                                        FontSize="11"/>
