                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Source="mcdonald.png"
                                   Aspect="AspectFill"/>

                            <Grid Grid.Column="1" Margin="15,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       Text="10% Off"
                                       FontSize="18"
                                       FontAttributes="Bold"
